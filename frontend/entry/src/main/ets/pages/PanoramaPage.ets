import router from '@ohos.router';
@Entry
@Component
export default struct PanoranmaPage {
  build() {
    Stack() {
      Column() {
        // 顶部返回和标题
        Row() {
          // 返回按钮
          Image($r('app.media.ic_back'))
            .width(32)
            .height(32)
            .offset({x:-100,y:0})
            .onClick(() => {
              router.back();
            })
          Text('全景国博')
            .fontSize(24)
            .fontWeight(FontWeight.Bold)
            .margin({ top: 16, bottom: 8, right: 16 })
            .alignSelf(ItemAlign.Center)
          Blank()
        }
        // 副标题
        Text('国博简介')
          .fontSize(18)
          .fontWeight(FontWeight.Bold)
          .margin({ top: 8, bottom: 12 })
          .alignSelf(ItemAlign.Center)
        // 正文内容
        Scroll() {
          Column() {
            Text('博物馆是代表国家收藏、研究、展示、阐释中华文化代表性物证的最高历史文化艺术殿堂，负有留存民族集体记忆、传承国家文化基因、促进文明交流互鉴的重要使命，也是国家文化客厅。\n\n博物馆的前身可追溯至1912年，以筹建国立历史博物馆和国立艺术博物馆为起点，经过百余年筹建和发展，边建设、贵守文物，增建建筑的第一步。新中国成立后，中央决定不久于天安门东侧建设中国博物馆和中国历史博物馆，毛主席亲自题写馆名。双方合署办公，逐步形成今天的国家博物馆。半个多世纪来，国家博物馆不断发展壮大，成为中国八大国家级博物馆之一。2012年，国家博物馆新馆建成并正式对外开放，建筑面积增加到近20万平方米，拥有48个标准展厅，是世界上单体建筑面积最大的大型综合性博物馆。\n\n博物馆馆现有藏品数超过143万余件，涵盖古代文物、近现代文物、艺术品等各类珍贵文物。馆藏体系完整，历史跨度巨大，材质形态多样，涉及青铜器、玉器、陶瓷、书画、钱币、佛造像、铜镜、服饰、饮食及古今科技等专题展览为骨干，每年推出的50余个历史文化、考古发掘、精品文物、美术作品、对外交流等临时展览和巡展成为支撑的主体展览体系。先后举办了"中华文明的伟大成就展""改革开放以来四十年大型展览"等重大主题展览，成为世界上独一无二的中华文化展示窗口，社会美誉不断提升，迈入世界上最受观众欢迎的博物馆前列。"到国博看展览"成为一道亮丽的风景线。\n\n党的十八大以来，习近平总书记六次来到国博并发表重要讲话，作出重要指示，三次为国博作重要展览致贺词。特别是2012年11月29日，习近平总书记带领十八届中央政治局常委参观"复兴之路"展览，提出实现中华民族伟大复兴是中华民族近代以来最伟大的梦想。吹响了实现中国高质量发展的时代号角。2022年7月1日，国家博物馆举办"奋进新时代"主题展览，习近平总书记亲临展览并发表重要讲话。国博工作者牢记总书记的殷切嘱托，始终坚持以人民为中心，全面贯彻落实党的精神和指示，全面提高高质量发展的行动自觉，争做博物馆事业发展的引领者和推动者。博物馆在设计社会、文化交流方面日益发挥更大作用，作出更大贡献。')
              .fontSize(16)
              .fontColor('#222')
              .margin({ left: 16, right: 16, bottom: 24 })
          }
        }
        .height('80%')
      }
      .backgroundColor('#fff')
    }
  }
}